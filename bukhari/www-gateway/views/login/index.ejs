<% layout('@layouts/public') -%>
<% block('scripts').append([
    `<script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>`,
    `<script src="/st/js/login.js"></script>`
].join('')) %>

<main>
    <div class="max-w-7xl mx-auto py-20">
        <h1 class="text-3xl text-blue-600 font-semibold text-center mb-6">
            Մուտք գործեք Ձեր հաշիվ
        </h1>

        <img src="/st/img/mortarboard.svg" width="150" class="block m-auto">

        <form id="loginForm" class="w-4/5 max-w-lg p-8 m-auto flex flex-col bg-white justify-center shadow rounded-lg">

            <div style="display: none;"
                 class="errors bg-red-100 border border-red-400 mb-6 text-gray-700 py-3 px-6 rounded-lg">
                <i class="las la-exclamation-triangle mr-2 text-red-600"></i><span
                        class="text-red-600">Սխալ տվյալներ</span>
            </div>

            <div class="flex flex-col mb-6">
                <label class="font-semibold text-gray-500" for="email">Էլ․ հասցե</label>
                <input type="text" name="email" id="email"
                       class="w-100 mt-2 py-3 px-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-400 dark:border-gray-700 text-gray-800 font-semibold focus:border-blue-500 focus:outline-none">
            </div>

            <div class="flex flex-col mb-6">
                <label class="font-semibold text-gray-500" for="password">Գաղտնաբառ</label>
                <input type="password" name="password" id="password"
                       class="w-100 mt-2 py-3 px-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-400 dark:border-gray-700 text-gray-800 font-semibold focus:border-blue-500 focus:outline-none">
            </div>

            <button type="submit"
                    class="md:w-32 mb-8 lg:w-full bg-blue-600 focus:ring-4 focus:ring-blue-600 focus:ring-opacity-50 focus:outline-none hover:bg-blue-dark text-white font-semibold py-3 px-6 rounded-lg mt-3 hover:bg-blue-500">
                Մուտք
            </button>

            <hr class="mb-6">

            <p class="text-center">
                Copyright © 2020 - 2021 Eduard Hovhannisyan. All rights reserved.
                Terms of Use | Privacy Policy
            </p>
        </form>
    </div>
</main>