<% layout('@layouts/dashboard') -%>
<% block('links').append([
    `<link rel="stylesheet" href="/st/css/games/memory.css" />`
].join('')) %>
<% block('scripts').append([
    `<script src="/st/js/games/memory.js"></script>`
].join('')) %>
<%
let images = [
    { id: 'lion', src: '/st/img/games/memory/lion.svg' },
    { id: 'sheep', src: '/st/img/games/memory/sheep.svg' },
    { id: 'cat', src: '/st/img/games/memory/cat.svg' },
    { id: 'pig', src: '/st/img/games/memory/pig.svg' },
    { id: 'bee', src: '/st/img/games/memory/bee.svg' },
    { id: 'boar', src: '/st/img/games/memory/boar.svg' },
    { id: 'panda', src: '/st/img/games/memory/panda.svg' },
    { id: 'lama', src: '/st/img/games/memory/lama.svg' },
    { id: 'parrot', src: '/st/img/games/memory/parrot.svg' },
    { id: 'elephant', src: '/st/img/games/memory/elephant.svg' },
];

images = [...images, ...images];
%>

<main class="h-full pb-16 overflow-y-auto relative">
    <section class="memory-game h-full flex justify-center">
        <% images.forEach(image => { %>
            <div class="memory-card " data-card="<%= image.id %>">
                <img class="front-face"
                     src="<%= image.src %>"/>
                <img class="back-face"
                     src="data:image/svg+xml;base64,"
                />
            </div>
        <% }) %>
    </section>
    <div id="youWin">
        <h2>Դու հաղթեցի՛ր, կուզե՞ս կրկին փորձել</h2>
        <button onClick="window.location.reload(false)">այո</button>
    </div>
</main>