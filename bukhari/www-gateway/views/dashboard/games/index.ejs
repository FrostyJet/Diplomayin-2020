<% layout('@layouts/dashboard') -%>
<% block('links').append([].join('')) %>
<%
const games = [
    { id: 'color-wheel', icon: '/st/img/i/color-wheel.svg', title: 'Գունախաղ' },
    { id: 'color-palette', icon: '/st/img/i/cubes-stack.svg', title: '2048' },
    { id: 'sudoku', icon: '/st/img/i/sudoku.svg', title: 'Սուդոկու' },
    { id: 'tic-tac-toe', icon: '/st/img/i/tic-tac-toe.svg', title: 'Իքսիկ և կլորիկ' },
    { id: 'chess', icon: '/st/img/game-icons/chess.svg', title: 'Շախմատ' },
    { id: 'puzzle', icon: '/st/img/i/jigsaw.svg', title: 'Փազլ' },
    { id: 'animals', icon: '/st/img/i/lion.svg', title: 'Կենդանիներ' },
    { id: 'memory', icon: '/st/img/i/innovation.svg', title: 'Հիշողության լարում' },
];
%>

<main class="h-full pb-16 overflow-y-auto">
    <div class="container py-7 px-6 max-w-7xl ml-4 grid">

        <div class="grid md:grid-cols-3 gap-6">
            <% games.forEach(game => { %>
                <a href="/dashboard/games/<%= game.id %>"
                   class="h-80 rounded-2xl relative shadow-md bg-white px-6 pt-6 pb-10 border-2 hover:border-yellow-500 cursor-pointer">
                    <img src="<%= game.icon %>" class="w-auto mx-auto max-w-full max-h-full"/>
                    <h4 class="absolute bottom-2 font-semibold"><%= game.title %></h4>
                </a>
            <% }) %>
        </div>
    </div>
</main>